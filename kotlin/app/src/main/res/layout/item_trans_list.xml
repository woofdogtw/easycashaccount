<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:orientation="vertical">
    <TableRow>
        <TextView android:id="@+id/dateTextView"
                  android:layout_height="wrap_content"
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:minWidth="96sp"
                  android:maxWidth="150sp" />

        <TextView android:id="@+id/inExpTextView"
                  android:layout_height="wrap_content"
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:minWidth="72sp"
                  android:maxWidth="150sp"
                  android:textSize="15sp" />

        <TextView android:layout_height="match_parent"
                  android:layout_width="0dip"
                  android:layout_weight="2" />
    </TableRow>

    <TableRow>
        <TextView android:id="@+id/typeTextView"
                  android:layout_height="wrap_content"
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:minWidth="96sp"
                  android:maxWidth="150sp"
                  android:textSize="20sp" />

        <TextView android:id="@+id/moneyTextView"
                  android:layout_height="wrap_content"
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:minWidth="72sp"
                  android:maxWidth="150sp"
                  android:textSize="20sp" />

        <TextView android:id="@+id/descriptTextView"
                  android:layout_height="wrap_content"
                  android:layout_width="0dip"
                  android:layout_weight="2" />
    </TableRow>

    <TableRow>
        <TextView android:layout_width="0dip"
                  android:layout_weight="1"
                  android:minWidth="96sp"
                  android:maxWidth="150sp" />

        <TextView android:layout_width="0dip"
                  android:layout_weight="1"
                  android:minWidth="72sp"
                  android:maxWidth="150sp" />

        <TextView android:id="@+id/locationTextView"
                  android:layout_height="wrap_content"
                  android:layout_width="0dip"
                  android:layout_weight="2" />
    </TableRow>
</TableLayout>
